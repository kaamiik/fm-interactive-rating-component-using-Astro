---
const { El = "div" } = Astro.props;
---

<El class="card">
  <slot />
</El>

<style lang="scss">
  @use "../styles/abstracts" as *;

  .card {
    margin-block: $card-margin-block;
    padding: $card-padding-mobile;
    background-image: $card-background-default;
    border-radius: $card-border-radius-mobile;

    @include mq(medium) {
      padding: $card-padding-desktop;
      border-radius: $card-border-radius-desktop;
    }
  }
</style>
